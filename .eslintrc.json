{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended", "google"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "error", 2, {
        "SwitchCase": 1,
        "ignoredNodes": ["TemplateLiteral *"]
      }
    ],
    "object-curly-spacing": ["warn", "always"]
  }
}
